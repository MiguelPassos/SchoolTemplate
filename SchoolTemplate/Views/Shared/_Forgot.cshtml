<div class="modal fade" id="forgot-box" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <div class="modal-content">
            <!--SIGNIN AS USER START-->
            <div class="user-box">
                <h2>Recuperar Acesso</h2>
                <!--FORM FIELD START-->
                <form asp-controller="Account" asp-action="RecoveryAccess" asp-antiforgery="true" method="post">
                    <div class="input-container">
                        <input type="text" class="cpf" placeholder="CPF" required name="Document" alt="Informe o CPF previamente cadastrado no sistema.">
                        <i class="fas fa-id-card"></i>
                        <span style="font-weight: 400;">Informe o CPF cadastrado no sistema para recuperar seu acesso.</span>
                    </div>                    
                    <div class="input-container">
                        <input type="submit" class="btn-style" value="Enviar">
                    </div>
                </form>
                <!--FORM FIELD END-->
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
