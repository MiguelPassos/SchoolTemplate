@using SchoolTemplate.Helpers

<!DOCTYPE html>
<html>
<head>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Colégio Lema - @ViewData["Title"]</title>

    <!-- start Section Scripts -->
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery.mask/jquery.mask.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/custom-functions.js" asp-append-version="true"></script>
    <script src="~/js/maskers.js" asp-append-version="true"></script>

    <!-- end Section Scripts -->

    @RenderSection("Scripts", required: false)

    <!-- start Section Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/style.css" />
    <!-- start Template Styles -->
    <link rel="stylesheet" href="~/css/owl.carousel.css" />
    <link rel="stylesheet" href="~/css/template.css" />
    <link rel="stylesheet" href="~/css/color.css" />
    <link rel="stylesheet" href="~/css/shortcodes.css" />
    <link rel="stylesheet" href="~/css/typography.css" />
    <link rel="stylesheet" href="~/css/widget.css" />

    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="kode_wrapper">
        <partial name="_NavigationBar" />
        @if (!User.Identity.IsAuthenticated)
        {
            <!--REGISTER MODAL START-->
            <partial name="_Register" />
            <!--REGISTER MODAL END-->
            <!--FORGOT ACCESS MODAL START-->
            <partial name="_Forgot" />
            <!--FORGOT ACCESS MODAL END-->
        }
        else
        {
            <!--LOGOUT MODAL START-->
            <partial name="_Logout" />
            <!--LOGOUT MODAL END-->
        }

        <partial name="_CookieConsentPartial" />

        <div class="body-content">

            @if (TempData["Alert"] != null)
            {
                @Html.Raw(TempData["Alert"])
            }
            @if (TempData["Message"] != null)
            {
                @Html.Raw(TempData["Message"])
            }

            @RenderBody()
            <hr />
            <partial name="_Newsletter" />
            <footer>
            </footer>
            <partial name="_Copyright" />
        </div>
    </div>
</body>
</html>
